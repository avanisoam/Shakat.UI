@page "/admin/deviceHistory/{Action?}/{Id:int?}"

<h3>Admin - DeviceHistory</h3>

@if (Id > 0)
{
    editItem = deviceHistoryDtos.Single(i => i.DeviceHistoryId == Id);
}

@if (deviceHistoryDtos == null)
{
    <p><em>Loading...</em></p>
}

else if (Action == "Create")
{
    <h1>Create</h1>
    <hr />

    <div>
        <dl class="row">

            <dt class="col-sm-2">
                DeviceInfoId
            </dt>
            <dd class="col-sm-12">
                <div class="form-group">
                    <input @bind="newDeviceHistoryObject.DeviceInfoId" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </dd>
            <dt class="col-sm-2">
                Time
            </dt>
            <dd class="col-sm-12">
                <div class="form-group">
                    <input @bind="newDeviceHistoryObject.Time" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </dd>
            <dt class="col-sm-2">
                Latitude
            </dt>
            <dd class="col-sm-12">
                <div class="form-group">
                    <input @bind="newDeviceHistoryObject.Latitude" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </dd>
            <dt class="col-sm-2">
                Longitude
            </dt>
            <dd class="col-sm-12">
                <div class="form-group">
                    <input @bind="newDeviceHistoryObject.Longitude" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </dd>
            <dt class="col-sm-2">
                Remarks
            </dt>
            <dd class="col-sm-12">
                <div class="form-group">
                    <input @bind="newDeviceHistoryObject.Remarks" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </dd>
        </dl>
        <button class="btn btn-success" @onclick="AddItem">Add</button>
    </div>

    <br />
    <div>
        <NavLink href="admin/deviceHistory">Back to List</NavLink>
    </div>
}

else if (Action == "Edit")
{
    <h1>Edit</h1>
    <hr />

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Id
            </dt>
            <dd class="col-sm-12">
                @editItem.DeviceHistoryId
            </dd>
            <dt class="col-sm-2">
                DeviceInfoId
            </dt>
            <dd class="col-sm-12">
                <div class="form-group">
                    <input @bind="editItem.DeviceInfoId" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </dd>
            <dt class="col-sm-2">
                Latitude
            </dt>
            <dd class="col-sm-12">
                <div class="form-group">
                    <input @bind="editItem.Latitude" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </dd>
            <dt class="col-sm-2">
                Longitude
            </dt>
            <dd class="col-sm-12">
                <div class="form-group">
                    <input @bind="editItem.Longitude" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </dd>
            <dt class="col-sm-2">
                Remarks
            </dt>
            <dd class="col-sm-12">
                <div class="form-group">
                    <input @bind="editItem.Remarks" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </dd>
        </dl>
        <div class="form-group">
            <button class="btn btn-primary" @onclick="UpdateItem">
                Save
            </button>
        </div>
    </div>

    <br />
    <div>
        <NavLink href="admin/deviceHistory">Back to List</NavLink>
    </div>
}

else if (Action == "Details")
{
    <h1>Details</h1>
    <hr />
    <br />
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                DeviceHistoryId
            </dt>
            <dd class="col-sm-10">
                @editItem.DeviceHistoryId
            </dd>
            <dt class="col-sm-2">
                DeviceInfoId
            </dt>
            <dd class="col-sm-10">
                @editItem.DeviceInfoId
            </dd>
            <dt class="col-sm-2">
                Latitude
            </dt>
            <dd class="col-sm-10">
                @editItem.Latitude
            </dd>
            <dt class="col-sm-2">
                Longitude
            </dt>
            <dd class="col-sm-10">
                @editItem.Longitude
            </dd>
            <dt class="col-sm-2">
                Remarks
            </dt>
            <dd class="col-sm-10">
                @editItem.Remarks
            </dd>
        </dl>
    </div>
    <div>
        <NavLink href="admin/deviceHistory">Back to List</NavLink>
    </div>
}

else if (Action == "Delete")
{
    <h1>Delete</h1>
    <hr />

    <h3>Are you sure you want to delete this?</h3>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                DeviceHistoryId
            </dt>
            <dd class="col-sm-10">
                @editItem.DeviceHistoryId
            </dd>
            <dt class="col-sm-2">
                DeviceInfoId
            </dt>
            <dd class="col-sm-10">
                @editItem.DeviceInfoId
            </dd>
            <dt class="col-sm-2">
                Latitude
            </dt>
            <dd class="col-sm-10">
                @editItem.Latitude
            </dd>
            <dt class="col-sm-2">
                Longitude
            </dt>
            <dd class="col-sm-10">
                @editItem.Longitude
            </dd>
            <dt class="col-sm-2">
                Remarks
            </dt>
            <dd class="col-sm-10">
                @editItem.Remarks
            </dd>
        </dl>
    </div>
    <div>
        <button class="btn btn-danger"
            @onclick="@(async () => await DeleteItem(editItem.DeviceInfoId))">
            Delete
        </button>
    </div>

    <br />
    <div>
        <NavLink href="admin/deviceHistory">Back to List</NavLink>
    </div>
}

else
{
    <p>
        <NavLink href="admin/deviceHistory/Create">Create New</NavLink>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>DeviceHistoryId</th>
                <th>DeviceInfoId</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Remarks</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in deviceHistoryDtos)
            {
                <tr>
                    <td>@item.DeviceHistoryId</td>
                    <td>@item.DeviceInfoId</td>
                    <td>@item.Latitude</td>
                    <td>@item.Longitude</td>
                    <td>@item.Remarks</td>
                    <td>
                        <NavLink href="@($"admin/deviceHistory/Edit/{item.DeviceHistoryId}")">Edit</NavLink> |
                        <NavLink href="@($"admin/deviceHistory/Details/{item.DeviceHistoryId}")">Details</NavLink> |
                        <NavLink href="@($"admin/deviceHistory/Delete/{item.DeviceHistoryId}")">Delete</NavLink>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@code {
    [Parameter]
    public string? Action { get; set; }

    [Parameter]
    public int? Id { get; set; }
}