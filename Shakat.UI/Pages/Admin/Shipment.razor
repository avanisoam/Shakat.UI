
@page "/admin/Shipment/{Action?}/{Id:int?}"

<h3>Admin - Shipment</h3>

@if (Id > 0)
{
   editItem = shipmentDtos.Single(i => i.ShipmentId == Id);
}

@if (shipmentDtos == null)
{
    <p><em>Loading...</em></p>
}

else if (Action == "Create")
{
    <h1>Create</h1>
    <hr />

   <div>
        <dl class="row">
            
            
            <dt class = "col-sm-2">
               ShipmentId - Int32
            </dt>
            <dd class = "col-sm-12">
                <div class="form-group">
                    <input @bind="newShipmentObject.ShipmentId" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </dd>

            <dt class = "col-sm-2">
               OrderId - Int32
            </dt>
            <dd class = "col-sm-12">
                <div class="form-group">
                    <input @bind="newShipmentObject.OrderId" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </dd>

            <dt class = "col-sm-2">
               RouteId - Int32
            </dt>
            <dd class = "col-sm-12">
                <div class="form-group">
                    <input @bind="newShipmentObject.RouteId" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </dd>

            <dt class = "col-sm-2">
               TrackingNumber - String
            </dt>
            <dd class = "col-sm-12">
                <div class="form-group">
                    <input @bind="newShipmentObject.TrackingNumber" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </dd>

            <dt class = "col-sm-2">
               Status - String
            </dt>
            <dd class = "col-sm-12">
                <div class="form-group">
                    <input @bind="newShipmentObject.Status" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </dd>

        </dl>
        <button class="btn btn-success" @onclick="AddItem">Add</button>
    </div>

    <br />
     <div>
            <NavLink href="admin/Shipment">Back to List</NavLink>
    </div>
}

else if (Action == "Edit")
{
    <h1>Edit</h1>
    <hr />

    <div>
        <dl class="row">

            <dt class = "col-sm-2">
               ShipmentId - Int32
            </dt>
            <dd class = "col-sm-12">
                 <div class="form-group">
                    <input @bind="editItem.ShipmentId" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </dd>

            <dt class = "col-sm-2">
               OrderId - Int32
            </dt>
            <dd class = "col-sm-12">
                 <div class="form-group">
                    <input @bind="editItem.OrderId" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </dd>

            <dt class = "col-sm-2">
               RouteId - Int32
            </dt>
            <dd class = "col-sm-12">
                 <div class="form-group">
                    <input @bind="editItem.RouteId" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </dd>

            <dt class = "col-sm-2">
               TrackingNumber - String
            </dt>
            <dd class = "col-sm-12">
                 <div class="form-group">
                    <input @bind="editItem.TrackingNumber" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </dd>

            <dt class = "col-sm-2">
               Status - String
            </dt>
            <dd class = "col-sm-12">
                 <div class="form-group">
                    <input @bind="editItem.Status" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </dd>

         </dl>
        <div class="form-group">
            <button class="btn btn-primary" @onclick="UpdateItem">
                Save
            </button>
        </div>
    </div>

    <br />
     <div>
            <NavLink href="admin/Shipment">Back to List</NavLink>
    </div>
}

else if (Action == "Details")
{
    <h1>Details</h1>
    <hr />
    <br />
    <div>
         <dl class="row">

            <dt class = "col-sm-2">
               ShipmentId - Int32
            </dt>
            <dd class = "col-sm-10">
                @editItem.ShipmentId
            </dd>

            <dt class = "col-sm-2">
               OrderId - Int32
            </dt>
            <dd class = "col-sm-10">
                @editItem.OrderId
            </dd>

            <dt class = "col-sm-2">
               RouteId - Int32
            </dt>
            <dd class = "col-sm-10">
                @editItem.RouteId
            </dd>

            <dt class = "col-sm-2">
               TrackingNumber - String
            </dt>
            <dd class = "col-sm-10">
                @editItem.TrackingNumber
            </dd>

            <dt class = "col-sm-2">
               Status - String
            </dt>
            <dd class = "col-sm-10">
                @editItem.Status
            </dd>

        </dl>
    </div>
     <div>
            <NavLink href="admin/Shipment">Back to List</NavLink>
    </div>
}

else if (Action == "Delete")
{
    <h1>Delete</h1>
    <hr />

     <h3>Are you sure you want to delete this?</h3>

     <div>
         <hr />
          <dl class="row">

            <dt class = "col-sm-2">
               ShipmentId - Int32
            </dt>
            <dd class = "col-sm-10">
                @editItem.ShipmentId
            </dd>

            <dt class = "col-sm-2">
               OrderId - Int32
            </dt>
            <dd class = "col-sm-10">
                @editItem.OrderId
            </dd>

            <dt class = "col-sm-2">
               RouteId - Int32
            </dt>
            <dd class = "col-sm-10">
                @editItem.RouteId
            </dd>

            <dt class = "col-sm-2">
               TrackingNumber - String
            </dt>
            <dd class = "col-sm-10">
                @editItem.TrackingNumber
            </dd>

            <dt class = "col-sm-2">
               Status - String
            </dt>
            <dd class = "col-sm-10">
                @editItem.Status
            </dd>

        </dl>
     </div>
    <div>
         <button class="btn btn-danger" 
          @onclick="@(async () => await DeleteItem(editItem.ShipmentId))">
            Delete
          </button>
     </div>

    <br />
     <div>
            <NavLink href="admin/Shipment">Back to List</NavLink>
    </div>
}

else
{
<p>
        <NavLink href="admin/Shipment/Create">Create New</NavLink>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Vehicle Id</th>
                <th>Vehicle Type</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in shipmentDtos)
            {
                <tr>
                    <td>@item.ShipmentId</td>
                    <td>@item.TrackingNumber</td>
                    <td>
                        <NavLink href="@($"admin/Shipment/Edit/{item.ShipmentId}")">Edit</NavLink> | 
                        <NavLink href="@($"admin/Shipment/Details/{item.ShipmentId}")">Details</NavLink> | 
                        <NavLink href="@($"admin/Shipment/Delete/{item.ShipmentId}")">Delete</NavLink>                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@code {
    [Parameter]
    public string? Action { get; set; }

    [Parameter]
    public int? Id { get; set; }
}